<h1 class="title has-text-centered"><%= @user.username%> is creating a new product! &#127881;</h1>

<div class="column is-half is-offset-one-quarter">
  <form class="form" id="new_product" action="/products" method="post">

      <div class="field">
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fas fa-rocket"></i>
          </span>
          <input class="input" type="text" name="name" placeholder="Give your product a name" value="<%=params[:name]%>">
        </div>
      </div>

      <div class="field">
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fas fa-comment-dollar"></i>
          </span>
          <input class="input" type="text" name="description" placeholder="What's the elevator pitch?" value="<%=params[:description]%>">
        </div>
      </div>

      <div class="field">
        <div class="control has-icons-left">
          <span class="icon is-small is-left">
            <i class="fab fa-github"></i>
          </span>
          <input class="input" type="text" name="git_repo" placeholder="Enter the project's GitHub repository URL" value="<%=params[:git_repo]%>">
          <a class="help is-pulled-right" href="https://github.com/new" target="_blank"><i class="fab fa-github"></i> Create a new repository</a>
        </div>
      </div>

      <div class="field">
        <div class="control has-text-centered">
          <input class="button is-link is-medium is-outlined" type="submit" value="Create this product">
        </div>
      </div>

  </form>

</div>
